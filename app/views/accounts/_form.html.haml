= form_for @account do |f|
  - if @account.errors.any?
    #error_explanation
      %h2= "#{pluralize(@account.errors.count, "error")} prohibited this account from being saved:"
      %ul
        - @account.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :amount
    = text_field_tag :amount1
    = f.hidden_field :amount
  
    


  .actions
    = f.submit 'Pagar',onclick: "sumar()"



:javascript
  function sumar(){
    let amountt = document.getElementById("amount1").value
    let amount2 = document.getElementById("account_amount").value
    amountt = parseFloat(amountt)
    amount2 = parseFloat(amount2)

    document.getElementById("account_amount").value = amountt+amount2
  }